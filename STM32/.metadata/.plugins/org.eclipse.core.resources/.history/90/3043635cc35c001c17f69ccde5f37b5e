#include "com_FPGA_spi.h"


uint8_t txData [2] = {0b10111010, 0b10101010};

void test_spi(){
	moteur1();
	spi_transmit();
	return;
}



void spi_transmit(){
	HAL_SPI_Transmit (&hspi1,txData,2,100);
	return;
}



void moteur1(){
	txData[1] &=  0b01111111;
}

void moteur2(){
	txData[1] |= 0b10000000;
}

void cmd_marche_arret(){

	txData[1] &=  0b 1001 1111;
	txData[1] |=  0b 0001 0000;
}

void sens_rotation(){
	txData[1] &=  0b 1010 1111;
	txData[1] |=  0b 0010 0000;
}

void config_freq_PWM(){
	txData[1] &=  0b 1100 1111;
	txData[1] |=  0b 0100 0000;
}

void vit_rap_cyc(){
	txData[1] &=  0b 1111 1111;
	txData[1] |=  0b 0111 0000;
}






void fct_vierge(){
	txData[1] &=  0b 1111 1111;
	txData[1] |=  0b 0000 0000;
}






